
{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
<div class="example-wrapper">

Username: <input type="text" id="un"/> <br>
Password: <input type="text" id="pw"/><br>

        <script>
        function postData(){

        // getting the values from the fields        
        var username = $('#un').val();
        var password = $('#pw').val();
        
        // validation
        if(username == ""){
           alert("please enter a username");
        } else {
        
        
            console.log(username);
            console.log(password);   
            
            $.post( "/catchTheData", { type: "insertnewuser", un: username, pw: password})
                  .done(function( data ) {
                    alert( "Data Loaded: " + data );
                  });
                  
       }       

        
        
        
        

       }        
       
       function check(){

        // getting the values from the fields        
        var username = $('#un').val();

      
         // passing it to the catchTheData page for verification  
        $.post( "/catchTheData", { type: "checkifusernameexists", un: username})
              .done(function( data ) {
                alert( "Data Loaded: " + data );
              });
    
        
        
        
        

       }        
        </script>
        
        <button onclick="postData()">Post data!</button>
        
        
        
        <button onclick="check()">Check if user exists</button>
        
    
</div>
{% endblock %}
